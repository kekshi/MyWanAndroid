<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- App Theme Light -->
    <style name="BaseAppThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <!-- textAllCaps 全部字母大写-->
    <style name="TabLayoutText" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">true</item>
    </style>
    <!-- App Theme Dark -->

    <!-- App Theme Launch -->
    <style name="AppThemeLaunch" parent="BaseAppThemeLight">
        <item name="android:windowBackground">?attr/colorPrimary</item>
    </style>

</resources>